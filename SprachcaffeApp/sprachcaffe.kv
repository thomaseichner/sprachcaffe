<SprachCaffe>:
    orientation: 'vertical'
    Camera:
        id: camera
        resolution: (320, 240)
        play: False
    ToggleButton:
        text: 'Play'
        on_press: camera.play = not camera.play
        size_hint_y: None
        height: '48dp'
    Button:
        text: 'Capture'
        size_hint_y: None
        height: '48dp'
        on_press: root.capture()